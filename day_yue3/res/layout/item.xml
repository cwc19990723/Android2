<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView android:id="@+id/it_tu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hj"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginRight="40dp"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/it_tu">
        
        <TextView android:id="@+id/it_riqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23日星期五"
            android:textSize="30sp"
            android:layout_marginTop="10dp"/>
        
        <TextView android:id="@+id/it_gaowen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高温"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
        
        <TextView android:id="@+id/it_diwen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="低温"
            android:textSize="20sp"/>
        
        <TextView android:id="@+id/it_fengli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风力"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
        
        <TextView android:id="@+id/it_fengxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风向"
            android:textSize="20sp"/>
        
        <TextView android:id="@+id/it_tianqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天气"
            android:textSize="30sp"
            android:layout_marginTop="20dp"/>
        
    </LinearLayout>
    
    <TextView android:id="@+id/it_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890876543245678"
        android:layout_below="@id/it_tu"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"/>

</RelativeLayout>
