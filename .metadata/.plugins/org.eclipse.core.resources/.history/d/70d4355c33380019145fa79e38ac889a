			lv.setAdapter(adapter);
		};
	};

	private ListView lv;

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_b);
		
		lv = (ListView) findViewById(R.id.lv);
		
		new Thread(){
			
		}.start();
	}
}
