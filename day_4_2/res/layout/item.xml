<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <EditText android:id="@+id/it_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="名称"/>
    
    <EditText android:id="@+id/it_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手机号码"/>
    
    <RadioGroup 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        
        <RadioButton android:id="@+id/it_nan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"/>
        
        <RadioButton android:id="@+id/it_nv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"/>
        
    </RadioGroup>
    
    <CheckBox android:id="@+id/it_lanqiu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="篮球"/>
    
    <CheckBox android:id="@+id/it_zuqiu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="足球"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        
        <Button android:id="@+id/it_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_marginRight="20dp"
            android:background="@drawable/zhi"/>
        
        <Button android:id="@+id/it_xiugai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            android:layout_marginLeft="20dp"
            android:background="@drawable/zhi"/>
        
    </LinearLayout>

</LinearLayout>
