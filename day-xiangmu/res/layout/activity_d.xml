<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">
    
    <ImageButton android:id="@+id/d_imtu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/def_btn_more_3"
        android:layout_margin="10dp"/>
    
    <TextView android:id="@+id/d_yaoyiyao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text=" 摇一摇    >"
        android:textSize="20dp"
        android:background="@drawable/zhi"
        />
    
    <TextView android:id="@+id/d_tiaobeijing"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text=" 调节背景    >"
        android:textSize="20dp"	
        android:background="@drawable/zhi"/>
    
    <TextView android:id="@+id/d_ruanjian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text=" 软件使用讨论    >"
        android:textSize="20dp"
        android:background="@drawable/zhi"/>
    
    <TextView android:id="@+id/d_shoucang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text=" 我的收藏    >"
        android:textSize="20dp"
        android:background="@drawable/zhi"/>
    
    <TextView android:id="@+id/d_geren"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text=" 个人中心   >"
        android:textSize="20dp"
        android:background="@drawable/zhi"/>

</LinearLayout>
