<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText android:id="@+id/a_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入姓名" />
    
    <EditText android:id="@+id/a_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入地址" />
    
    <EditText android:id="@+id/a_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入性别" />
    
    <EditText android:id="@+id/a_techang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入特长" />
    
    <Button android:id="@+id/a_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插入"
        android:layout_marginLeft="251dp"
        android:layout_marginTop="20dp"/>
    
    <Button android:id="@+id/a_cha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

</LinearLayout>
