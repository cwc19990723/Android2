<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView android:id="@+id/it_tu"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        
        <TextView android:id="@+id/it_riqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
        
        <TextView android:id="@+id/it_fengli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风力"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
        
        <TextView android:id="@+id/it_fengxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风向"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
        
        <TextView android:id="@+id/it_gaowen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高温"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
        
        <TextView android:id="@+id/it_diwen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="低温"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
        
        <TextView android:id="@+id/it_duoyun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多云"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
        
    </LinearLayout>
    
</LinearLayout>
